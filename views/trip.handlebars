<div class="row">
    <div class="col s12">
        <h1>Trips</h1>
    </div>
</div>

<div class="divider"></div>
<span><button class="index"><a href="/">Home</a></button></span>
<span><button class="create"><a href="/create">Create Trip</a></button></span>
<div class="divider"></div>

 <ul class="collapsible" data-collapsible="accordion">
     {{#each trips}}
    <li>
      <div class="collapsible-header"><i class="material-icons">filter_drama</i>{{trip_name}}</div>
      <div class="collapsible-body">
        <span>Location: <span contenteditable="true">{{location}}</span></span></br>
        <span>Date: <span contenteditable="true">{{trip_date}}</span> </span></br>
        {{#each Fishes}}
        <span>Name: <span contenteditable="true">{{fish_name}}</span></span> </br>
        <span>Bait: <span contenteditable="true">{{bait}}</span></span> </br>
        <span>Notes: <span contenteditable="true">{{notes}}</span></span> </br>
        {{/each}}
        <button class="update" type="button" action="/trips" method="POST">Update</button>
        <button class="update" type="submit" action="/trips" method="POST">Delete</button>
      </div>
    </li>
    {{/each}}
</ul>
